<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="tree_real_estate_root" model="ir.ui.view">
        <field name="name">y.realestate.property.view.tree</field>
        <field name="model">y.realestate.property</field>
        <field name="arch" type="xml">
            <list string="Property" sample="1">
                <field name="name" width="200px"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bed_room"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="form_real_estate_property" model="ir.ui.view">
        <field name="name">y.realestate.property.view.form</field>
        <field name="model">y.realestate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header></header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>
                            <!-- Start add at 20250111-1500: Add property_type_id field -->
                            <field name="property_type_id" string="Property type"/>
                            <!-- End add at 20250111-1500: Add property_type_id field -->
                            <!-- Start add at 20241220-1505: Add property_tag_id field -->
                            <field name="property_tag_id" string="Property Tags" widget="many2many_tags"/>
                            <!-- End add at 20241220-1505: Add property_tag_id field -->
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <!-- Start add at 20250112-1015: Add best_price field -->
                            <field name="best_price" string="Best Price"/>
                            <!-- End add at 20250112-1015: Add best_price field -->
                            <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <group string="Property Details">
                                <field name="bed_room" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (sqm)" invisible="garden == False"/>
                                <field name="garden_orientation" string="Garden Orientation" invisible="garden == False"/>
                                <!-- Start add at 20250112-1005: Add total_area field -->
                                <field name="total_area" string="Total Area (sqm)"/>
                                <!-- End add at 20250112-1005: Add total_area field -->
                            </group>
                            <!-- Start add at 20250110-1450: Add Property Status group with active and state fields -->
                            <group string="Property Status">
                                <field name="active"/>
                                <field name="state"/>
                            </group>
                            <!-- End add at 20250110-1450: Add Property Status group with active and state fields -->
                        </page>
                        <!-- Start add at 20241220-1455: Add Offers page with offer_ids field -->
                        <page string="Offers">
                            <field name="offer_ids">
                                <list>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <!-- End add at 20241220-1455: Add Offers page with offer_ids field -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="search_real_estate_property" model="ir.ui.view">
        <field name="name">y.realestate.property.view.search</field>
        <field name="model">y.realestate.property</field>
        <field name="arch" type="xml">
            <search>
                <!-- Start add at 20250110-1520: Add state field after postcode -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="state" string="Status"/>
                <!-- End add at 20250110-1520: Add state field after postcode -->
                <!-- Start add at 20250110-1520: Add Archived and State filters -->
                <filter name="Inactive" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                <!-- End add at 20250110-1520: Add Archived and State filters -->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_estate_root" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">y.realestate.property</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Real Estate Property
            </p>
        </field>
    </record>
</odoo>