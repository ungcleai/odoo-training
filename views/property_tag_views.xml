<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Start add at 20241220-1446: Create property tag views and action -->
        <!-- List View -->
        <record id="view_property_tag_list" model="ir.ui.view">
            <field name="name">y.realestate.property.tag.list</field>
            <field name="model">y.realestate.property.tag</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string="Property Tag" width="200px"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_property_tag_form" model="ir.ui.view">
            <field name="name">y.realestate.property.tag.form</field>
            <field name="model">y.realestate.property.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Tag Name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_property_tag" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">y.realestate.property.tag</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- End add at 20241220-1446: Create property tag views and action -->
    </data>
</odoo>
